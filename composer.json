{
    "name": "arachne/service-collections",
    "description": "Resolvers and iterators over services for nette/di. Used by arachne/forms and other libraries.",
    "type": "library",
    "keywords": [ "nette", "arachne", "di" ],
    "license": "MIT",
    "authors": [
        {
            "name": "Jáchym Toušek",
            "homepage": "http://enumag.cz",
            "email": "enumag@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1.0",
        "nette/di": "^3.0.0",
        "nette/utils": "^3.0.0"
    },
    "require-dev": {
        "arachne/codeception": "^1.0.0",
        "codeception/codeception": "^2.3.2",
        "eloquent/phony": "^1.0.0",
        "eloquent/phony-phpunit": "^1.0.0|^2.0.0"
    },
    "minimum-stability": "alpha",
    "autoload": {
        "psr-4": {
            "Arachne\\ServiceCollections\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Unit\\": "tests/unit/src",
            "Tests\\Integration\\": "tests/integration/src"
        },
        "files": [
            "vendor/codeception/codeception/shim.php"
        ]
    },
    "scripts": {
        "tools": "sh composer-tools.sh",
        "ci": [
            "@fix",
            "@analyse",
            "@test"
        ],
        "fix": "\"vendor-tools/bin/php-cs-fixer\" fix",
        "analyse": "\"vendor-tools/bin/phpstan\" analyse --no-progress --level=5 --configuration=phpstan.neon src tests",
        "test": [
            "\"vendor/bin/codecept\" build",
            "\"vendor/bin/codecept\" run --debug"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
