{
    "name": "arachne/service-collections",
    "description": "Resolvers and iterators over services for nette/di. Used by arachne/forms and other libraries.",
    "type": "library",
    "keywords": [ "nette", "arachne", "di" ],
    "license": "MIT",
    "authors": [
        {
            "name": "Jáchym Toušek",
            "homepage": "http://enumag.cz",
            "email": "enumag@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1.0",
        "nette/di": "^3.0.0@alpha",
        "nette/utils": "^3.0.0@alpha"
    },
    "require-dev": {
        "arachne/codeception": "^1.0.0@alpha",
        "codeception/codeception": "^2.2.0",
        "eloquent/phony": "^0.14.0"
    },
    "minimum-stability": "alpha",
    "autoload": {
        "psr-4": {
            "Arachne\\ServiceCollections\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Unit\\": "tests/unit/src",
            "Tests\\Integration\\": "tests/integration/src"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "scripts": {
        "all": [
            "@fix",
            "@analyse",
            "@test"
        ],
        "fix": "php-cs-fixer fix",
        "analyse": "phpstan analyse --no-progress --level=4 --configuration=phpstan.neon src tests",
        "test": [
            "\"vendor/bin/codecept\" build",
            "\"vendor/bin/codecept\" run"
        ]
    }
}
